  body
   nav.navbar.navbar-expand-lg.navbar-light.bg-light.navbar-fixed-top.shadow
    a.navbar-brand(href="/default") Todo
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href='/default')
            | Home 
            span.sr-only (current)
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Todo
          .dropdown-menu(aria-labelledby='navbarDropdown')
            div.dropdown-item
              i(style="margin-left:5px;margin-right:5px").fas.fa-clipboard 
              a.text-dark.text-decoration-none(href='/todo/create') New Todo
            div.dropdown-item
              i(style="margin-left:5px;margin-right:5px").fas.fa-clipboard-list
              a.text-dark.text-decoration-none(href='/todos') Todo List
            .dropdown-divider
            a.dropdown-item(href='#') Yeet
      form.form-inline.my-2.my-lg-0
        if logged
          div.btn.btn-outline-success.my-2.my-sm-0
            i(style="margin-left:5px;margin-right:5px").fas.fa-sign-out-alt
            a.text-dark.text-decoration-none(href='/login/logout') Logout
        else
          div.btn.btn-outline-success.my-2.my-sm-0
            i(style="margin-left:5px;margin-right:5px").fas.fa-sign-out-alt
            a.text-dark.text-decoration-none(href='/login') Login   
   block content
      
